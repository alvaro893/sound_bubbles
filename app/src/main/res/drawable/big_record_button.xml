<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape  android:shape="rectangle" >
            <corners
                android:radius="100dp"
                />
            <solid
                android:color="@color/passive_red"
                />
            <size
                android:width="80dp"
                android:height="80dp"
                />
            <stroke
                android:width="6dp"
                android:color="@color/passive_aqua"
                />

        </shape>
    </item>
    <item android:state_pressed="true">
        <shape  android:shape="rectangle" >
            <corners
                android:radius="100dp"
                />
            <solid
                android:color="@color/active_red"
                />
            <size
                android:width="81dp"
                android:height="81dp"
                />
            <stroke
                android:width="6dp"
                android:color="@color/active_aqua"
                />

        </shape>
    </item>
</selector>
